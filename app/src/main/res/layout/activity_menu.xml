<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.unichristus.geometry.vector.MenuActivity"
    android:id="@+id/menuVector">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OPERAÇÕES"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Escolha a Operação"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adição de Vetores"
        android:id="@+id/btnStartAddition"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView4"
        android:layout_alignEnd="@+id/btnStartEscalar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtração de Vetores"
        android:id="@+id/btnStartSubtracao"
        android:layout_alignBottom="@+id/btnStartAddition"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prod. Escalar"
        android:id="@+id/btnStartEscalar"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/btnStartAddition"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prod. Vetorial"
        android:id="@+id/btnStartProdVetorial"
        android:layout_alignBottom="@+id/btnStartEscalar"
        android:layout_alignEnd="@+id/btnStartSubtracao"
        android:layout_alignStart="@+id/btnStartSubtracao" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modulo - Vetor"
        android:id="@+id/btnModVetor"
        android:layout_below="@+id/btnStartEscalar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'???'"
        android:id="@+id/lmgtfy"
        android:layout_alignTop="@+id/btnModVetor"
        android:layout_alignEnd="@+id/btnStartProdVetorial"
        android:layout_alignStart="@+id/btnStartProdVetorial" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:background="@drawable/vetor"
        android:layout_below="@+id/btnModVetor" />


</RelativeLayout>
